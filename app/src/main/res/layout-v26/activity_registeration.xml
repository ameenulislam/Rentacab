<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registeration">

    <TextView
        android:id="@+id/registeration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="118dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/mmrtext"
        android:text="@string/register"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/register_name"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="210dp"
            android:autofillHints=""
            android:ems="10"
            android:textColor="@color/textPrimary"
            android:fontFamily="@font/cairo_light"
            android:hint="@string/enter_name"
            android:inputType="textPersonName"
            android:textColorHint="@color/textPrimary"/>

        <EditText
            android:id="@+id/register_email"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/cairo_light"
            android:textColor="@color/textPrimary"
            android:hint="@string/enter_email"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/textPrimary" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/cairo_light"
            android:textColor="@color/textPrimary"
            android:hint="@string/enter_number"
            android:inputType="phone"
            android:textColorHint="@color/textPrimary" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/cairo_light"
            android:textColor="@color/textPrimary"
            android:hint="@string/enter_pwd"
            android:inputType="textPassword"
            android:textColorHint="@color/textPrimary" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_btn"
            android:fontFamily="@font/mmrtext"
            android:text="@string/register"
            android:textAlignment="center"
            android:textColor="#FAF4F4"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/already_registered_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="145dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cairo_light"
            android:text="@string/already_regsitered"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:background="@null"
            android:text="@string/login"
            android:fontFamily="@font/mmrtext"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:ignore="InvalidId" />

    </LinearLayout>

</RelativeLayout>


